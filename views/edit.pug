html 
    head
        title Edit User
    body 
        h1 Edit User
        a(href=`/createUser` ) Create User
        a(href=`/userListing`) User Listings
        a(href='/search') Search

        form(action=`/editUser/${currentUser[0].id}` method='post')
            
            label(for='first_name') First Name: 
            input(id='first_name', name='first_name' value= currentUser[0].first_name) 
            label(for='last_name') Last Name: 
            input(id='last_name', name='last_name' value= currentUser[0].last_name) 
            label(for='email') Email:
            input(id='email', name='email' value= currentUser[0].email) 
            label(for='age') Age: 
            input(id='age', name='age' value= currentUser[0].age) 
            input(type='submit')